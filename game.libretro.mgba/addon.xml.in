<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.mgba"
		name="Game Boy Advance (mGBA)"
		version="0.5.1"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.gba" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>GBA</platforms>
		<extensions>gba|gb|gbc</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<supports_keyboard>false</supports_keyboard>
		<supports_mouse>false</supports_mouse>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Game Boy Advance (mGBA) 0.5.1</summary>
		<description>mGBA aims to be faster and more accurate than many existing Game Boy Advance emulators, as well as adding features that other emulators lack.

Supported files: .gba, .gb, .gbc

License: MPL 2.0</description>
		<license>MPLv2.0</license>
		<platform>@PLATFORM@</platform>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
	</extension>
</addon>