<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.mgba"
		name="GBA (mgba)"
		version="0.2.0"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.nes" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
                   library_android="game.libretro.mgba.so"
                   library_linux="game.libretro.mgba.so"
                   library_osx="game.libretro.mgba.dylib"
                   library_windx="game.libretro.mgba.dll"
                   library_wingl="game.libretro.mgba.dll">
		<platforms>GBA</platforms>
		<extensions>gba</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_no_game>false</supports_no_game>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">MGBA v0.2.0</summary>
		<description>Source: https://github.com/libretro/mgba</description>
		<platform>all</platform>
	</extension>
</addon>
