<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.mgba"
		name="GBA (mGBA)"
		version="0.2.0"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.gba" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
                   library_android="libgame.libretro.mgba.so"
                   library_linux="game.libretro.mgba.so"
                   library_osx="game.libretro.mgba.dylib"
                   library_windx="game.libretro.mgba.dll"
                   library_wingl="game.libretro.mgba.dll">
		<platforms>GBA</platforms>
		<extensions>gba</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_no_game>false</supports_no_game>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">mGBA v0.2.0</summary>
		<description>mGBA aims to be faster and more accurate than many existing Game Boy Advance emulators, as well as adding features that other emulators lack.

Supported files: .gba

License: MPL 2.0</description>
		<platform>all</platform>
		<nofanart>true</nofanart>
	</extension>
</addon>
